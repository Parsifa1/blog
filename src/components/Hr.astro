---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class={`max-w-4xl  mx-auto ${noPadding ? "px-0" : "px-4"}`}>
  <hr
    class="hr-bg h-1 border-0 bg-skin-fill opacity-90"
    aria-hidden={ariaHidden}
  />
</div>
