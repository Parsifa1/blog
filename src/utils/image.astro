---
import { Image as AImg } from "astro:assets";
const props = Astro.props;
---

<figure>
  <AImg src={props.src} alt={props.alt} width={props.width} height={props.height} />
  <figcaption style={{ textAlign: "center", fontSize: "0.9em", color: "gray", marginTop: "4px" }}>
    {props.alt}
  </figcaption>
</figure>
